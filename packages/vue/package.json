    {
      "path": "dist/vue.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@types/vue": "^2.0.0",
    "parcel-config-vue2": "^0.1.3",
    "parcel-transformer-vue2": "^0.1.7",
